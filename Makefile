.PHONE: test-autogenerated

test-autogenerated:
	devcontainer features test \
		--features $(FEATURE) \
		--remote-user root \
		--skip-scenarios \
		--base-image mcr.microsoft.com/devcontainers/base:ubuntu \
		/workspaces/devcontainer-features

test-scenarios:
	devcontainer features test \
		--features $(FEATURE) \
		--remote-user root \
		--skip-autogenerated \
		--base-image mcr.microsoft.com/devcontainers/base:ubuntu \
		/workspaces/devcontainer-features
